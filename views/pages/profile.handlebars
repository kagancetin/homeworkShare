<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Profile</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">User Profile</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">

                    <!-- Profile Image -->
                    <div class="card card-primary card-outline">
                        <div class="card-body box-profile">
                            <div class="text-center">
                                <img class="profile-user-img img-fluid img-circle" src="{{userInfo.profilPhoto}}"
                                    alt="User profile picture">
                            </div>

                            <h3 class="profile-username text-center">{{userInfo.fullName}}</h3>

                            <p class="text-muted text-center">
                                {{#ifCond userInfo.type '==' 0}}
                                Yönetici
                                {{/ifCond}}
                                {{#ifCond userInfo.type '==' 1}}
                                Öğrenci
                                {{/ifCond}}</p>

                            <hr>

                            <strong><i class="fas fa-map-marker-alt mr-1"></i>Email</strong>

                            <p class="text-muted">{{userInfo.email}}</p>

                            <hr>

                            <strong><i class="fas fa-map-marker-alt mr-1"></i>Telefon Numarası</strong>

                            <p class="text-muted">{{userInfo.phoneNumber}}</p>

                            <hr>
                            {{#unless userInfo.superAdmin }}
                            {{#ifCond userActive.username '!=' userInfo.username }}
                            <button type="button" class="btn btn-primary btn-block" data-toggle="modal"
                                data-target="#updateUser">Kullanıcıyı Düzenle</button>
                            <button type="button" class="btn btn-danger btn-block" data-toggle="modal"
                                data-target="#removeUser">Kullanıcıyı Sil</button>
                            {{else}}
                            {{#ifCond userType '==' 0}}
                            <button type="button" class="btn btn-primary btn-block" data-toggle="modal"
                                data-target="#updateUser">Kullanıcıyı Düzenle</button>
                            <button type="button" class="btn btn-danger btn-block" data-toggle="modal"
                                data-target="#removeUser">Kullanıcıyı Sil</button>
                            {{/ifCond}}
                            {{/ifCond}}
                            {{/unless}}

                            {{#if userInfo}}
                            {{> user/_userProfileUpdateModal }}
                            {{> user/_userProfileRemoveModal }}
                            {{/if}}

                            {{#ifCond userInfo.username '==' userActive.username}}
                            <div>
                                <a href="/settings" class="btn btn-primary btn-block"><b>Profilimi
                                        Düzenle</b></a>
                            </div>
                            {{/ifCond}}
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->


                </div>
                <!-- /.col -->
                <div class="col-md-8">



                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>


{{> _footer}}

